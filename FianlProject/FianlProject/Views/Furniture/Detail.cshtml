                                        <div class="mini-img">
                                            <img src="/assets/image/shop/@Model.Image" style="width: 110px;" alt="">
                                        </div>
                                           @foreach(Furnitureimage furnitureimage in Model.Furnitureimages.Where(m=>m.IsMain==false))
                                           {
                                                <div class="mini-img">
                                                    <img src="/assets/image/shop/@furnitureimage.Name" style="width: 110px;" alt="">
                                                </div>
                                           }
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                        <div class="product-details-title">
                                            <h3>@Model.Name</h3>
                                            <div class="sku">
                                                <span>
                                                    SKU: @Model.SKU
                                                </span>
                                            </div>
                                            <div class="category">
                                                <span>
                                                    Categories:
                                                </span>
                                            @categoryfurniture
                                            </div>
                                            <div class="review">
                                                <span class="rate">
                                                    <i class="fa-solid fa-star"></i>
                                                    <i class="fa-solid fa-star"></i>
                                                    <i class="fa-solid fa-star"></i>
                                                    <i class="fa-solid fa-star-half-stroke"></i>
                                                    <i class="fa-solid fa-star-half-stroke"></i>
                                                </span>
                                                <a href="#">(3 customer reviews)</a>
                                            </div>
                                            <div class="desc">
                                                <span>About the product</span>
                                            </div>
                                            <p>@Model.Article
                                            </p>
                                            <div class="price mb-5">
                                                <span>
                                                    $@Model.Price
                                                </span>
                                            </div>
                                            <!-- <div class="stok mb-2">
                                                <span>Yes in stock</span>
                                            </div> -->
                                            <div class="quantity mb-5">
                                                <div class="qty-input">
                                                    <button class="qty-count qty-count--minus" data-action="minus"
                                                        type="button">-</button>
                                                    <input class="product-qty" type="number" name="product-qty" min="0"
                                                        max="10" value="1">
                                                    <button class="qty-count qty-count--add" data-action="add"
                                                        type="button">+</button>
                                                </div>
                                            <a asp-controller="Cart" asp-action="AddBasket" asp-route-id="@Model.Id" class="btn btn-default addToCart" onclick="">Add To Cart</a>
                                            </div>
                                            <div class="share-icon">
                                                <span class="feedback">
                                                    The product is already in the wishlist!
