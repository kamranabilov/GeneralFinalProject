@inject FianlProject.Services.LayoutService layoutService
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Panel</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/admin/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">

        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div style="background: #181824" class="navbar-brand-wrapper d-flex justify-content-center">
                <div  class="navbar-brand-inner-wrapper d-flex justify-content-between align-items-center w-100">
                    <a  class="navbar-brand brand-logo" asp-area="AdminPanel" asp-controller="Dashboard" >
                        <img style="width: 100%" src="~/assets/image/logo/@layoutService.getSettings().FirstOrDefault(s=>s.Key.Trim().ToLower() == "headerlogo")?.Value" alt="logo" />
                    </a>
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/admin/images/logo-mini.svg" alt="logo" /></a>
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-sort-variant"></span>
                    </button>
                </div>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end" style="background-color:gold">
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown me-1 g-3" style="gap: 20px;">
                       @* <a asp-area="AdminPanel" asp-controller="Order" class="nav-link count-indicator dropdown-toggle d-flex justify-content-center align-items-center" id="messageDropdown">
                            <i class="mdi mdi-checkbox-marked-circle mx-0"></i>
                            <span style="background: #fff; width:20px; height: 20px; top: 0px;" class="count">@layoutService.GetOrders().Count()</span>
                        </a>*@
                        <a asp-area="AdminPanel" asp-controller="Contact" class="nav-link count-indicator dropdown-toggle d-flex justify-content-center align-items-center" id="messageDropdown">
                            <i class="mdi mdi-message-text mx-0"></i>
                            <span style="background: #fff; width:20px; height: 20px; top: 0px;" class="count">@layoutService.GetContacts().Count()</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="messageDropdown">
                            <p class="mb-0 font-weight-normal float-left dropdown-header">Messages</p>
                            <a class="dropdown-item">
                                <div class="item-thumbnail">
                                    <img src="~/admin/images/faces/face15.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="item-content flex-grow">
                                    <h6 class="ellipsis font-weight-normal">
                                        
                                    </h6>
                                    <p class="font-weight-light small-text text-muted mb-0">
                                        The meeting is cancelled
                                    </p>
                                </div>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="profileDropdown">
                            <img src="~/admin/images/faces/face23.jpg" alt="profile" />
                            <span class="nav-profile-name">Antonalli Ruccozo</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item">
                                <i class="mdi mdi-settings text-primary"></i>
                                Settings
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper ">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" style="background: #181824; " id="sidebar">
                <ul class="nav" >
                    <li class="nav-item" >
                        <a class="nav-link" style="color: #fff !important" asp-area="AdminPanel" asp-controller="Dashboard">
                            <i class="mdi mdi-cube menu-icon"></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: #fff !important" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <i class="mdi mdi-crosshairs-gps menu-icon"></i>
                            <span class="menu-title">List Elements</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu" >
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="Slider" asp-action="index">Slider</a></li>
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="category" asp-action="index">Category</a></li>
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="Furniture" asp-action="index">Furniture</a></li>
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="Setting" asp-action="index">Setting</a></li>
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="About" asp-action="index">About</a></li>
                                <li class="nav-item"> <a style="color: #fff !important" class="nav-link" asp-controller="Order" asp-action="index">Order</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: #fff !important" href="pages/icons/mdi.html">
                            <i class="mdi mdi-emoticon menu-icon"></i>
                            <span class="menu-title">Icons</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
     
            @RenderBody()

        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/admin/vendors/chart.js/Chart.min.js"></script>
    <script src="~/admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/admin/js/dashboard.js"></script>
    <script src="~/admin/js/data-table.js"></script>
    <script src="~/admin/js/jquery.dataTables.js"></script>
    <script src="~/admin/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->
    @RenderSection("Scripts", false)

    <script src="~/admin/js/jquery.cookie.js" type="text/javascript"></script>
</body>

</html>

