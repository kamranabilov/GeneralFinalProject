@model Furniture
@{
    ViewData["Title"] = "Detail";
}
<div class="col-lg-9">
    <div class="btn-da">
        <h4 style="text-align:center; background-color: #f07f13; color: #fff; padding: 0.3rem;">Furniture</h4>
    </div>
    <hr />
    <dl class="row table table-warning">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10 table table-bordered" style="border-bottom: 1px solid black">
            <img style="width:110px; height:110px" src="~/assets/image/shop/@Model.Image" />
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SKU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SKU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.BestSeller)
        </dd>
         <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BestSeller)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

