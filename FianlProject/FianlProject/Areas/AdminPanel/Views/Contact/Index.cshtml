@model List<Contact>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="table-responsive pt-3">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-success" style="text-align: center">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Subject
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Contact contact in Model)
                {
                    <tr class="table-secondary">
                        <td>
                            @contact.Name
                        </td>
                        <td>
                            @contact.Email
                        </td>
                        <td>
                            @contact.Subject
                        </td>
                        <td>
                            @contact.Description
                        </td>
                        <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                            <div>
                                <a asp-area="AdminPanel" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id"
                                    class="btn btn-danger"><i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

