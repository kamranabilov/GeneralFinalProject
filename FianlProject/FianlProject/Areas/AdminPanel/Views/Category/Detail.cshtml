@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-9">
    <h4 style="text-align:center; background-color:chartreuse">Category</h4>
    <hr />
    <dl class="row" style="">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img style="width:110px; height:110px" src="~/assets/image/category/@Model.Image" />
            @Html.DisplayFor(model => model.Photo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

