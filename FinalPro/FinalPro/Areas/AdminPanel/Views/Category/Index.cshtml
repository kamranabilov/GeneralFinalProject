@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div style="text-align: center;">
        <a class="btn btn-success" style="color: #fff;"  asp-area="AdminPanel" asp-controller="category" asp-action="create">
            Create New Category
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                 @foreach (Category category in Model)
                {
                <tr class="table-light">
                    <td>
                        @category.Id
                    </td>
                    <td>
                        <img style="width:110px; height:110px" src="~/assets/image/category/@category.Image" />
                    </td>
                    <td>
                        @category.Name
                    </td>
                     <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                               class="btn btn-outline-success"><i class="mdi mdi-border-color"></i></a>
                        </div>
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                               class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>
                        </div>
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id"
                               class="btn btn-outline-warning"><i class="mdi mdi-information"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

