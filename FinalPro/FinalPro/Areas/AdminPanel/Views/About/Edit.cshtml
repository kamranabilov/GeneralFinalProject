@model About
@{
    ViewData["Title"] = "Edit";
}

<main class="main-panel">
    <h1 style="text-align:center; background-color:chartreuse">Edit About</h1>
    @if (TempData["Filname"] != null)
    {
        <div class="alert alert-danger">@TempData["Filename"]</div>
    }
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" class="mt-2" enctype="multipart/form-data">
        <div>
            <label>Images:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span classs="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>SubTitle:</label><br />
            <input asp-for="SubTitle" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="SubTitle"></span>
        </div>
        <div>
            <label>Title:</label><br />
            <input asp-for="Title" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Desc:</label><br />
            <input asp-for="Desc" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>
        <div>
            <label>Order:</label><br />
            <input asp-for="Order" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-5">
            <button class="btn btn-success" type="submit"> Update </button>
        </div>
    </form>
</main>

