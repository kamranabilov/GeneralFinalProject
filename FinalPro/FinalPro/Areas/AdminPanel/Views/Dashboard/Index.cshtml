@model HomeVM
@{
    ViewData["Title"] = "Index";

}
@{
    int Categorycount = 0;
    int Furniturecount = 0;
    int Contactcount = 0;
    int Ordercount = 0;
    decimal OrderPrice = 0;
}
@foreach (Category item in Model.Categories)
    Categorycount++;
@foreach (Furniture item in Model.Furnitures)
    Furniturecount++;
@foreach (Contact item in Model.Contacts)
{
    Contactcount++;
}
@foreach (Order item in Model.Orders)
{
    Ordercount++;
}

 @foreach (var item in Model.Orders)
 {
        if (item.Status==true)
        {
            OrderPrice += item.TotalPrice;
        }
 }


